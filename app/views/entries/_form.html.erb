<hr>

<div class="container form-container">
  <div class="grid">
 	<div class="unit span-grid login">
<%= form_for @entry do |f| %>
<fieldset>
	<%= f.label :title %>
    <%= f.text_field :title %>
</fieldset>
<fieldset>
	<%= f.label :description %>
	<%= f.text_area :description %>
</fieldset>
<fieldset>
	<%= f.label :tag_list, "Tags" %>
	<%= f.text_field :tag_list %>
</fieldset>
<%= f.submit 'Create Entry', :class => "submit" %>
<% end %>
	</div>
  </div>
</div>